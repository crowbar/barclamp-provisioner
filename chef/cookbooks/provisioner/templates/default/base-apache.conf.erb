<VirtualHost *:<%=@port%>>

    DocumentRoot <%= @docroot %>
    ErrorLog <%= @errorlog %>
    CustomLog <%= @logfile %> combined
    
    HostnameLookups Off
    UseCanonicalName Off
    
    <Directory />
        Options None
        AllowOverride None
        Order deny,allow
        Deny from all
    </Directory>

    <Directory <%= @docroot %>/>
        Options Indexes FollowSymLinks
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>

</VirtualHost>
